@{
    ViewData["Title"] = "Home Page";
}


@model IEnumerable<OnlineMovieTickets.Models.MovieDetails>
@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
    <a asp-action="Create">Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoviePicture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Movie_Name)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Movie_Description)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.DateAndTime)
                </td>
                <td>
                    <img src="@item.MoviePicture" width="100" height="100" asp-append-version="true" />
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> | 
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a asp-action="BookNow" asp-route-id="@item.Id">Book Your Ticket</a>
                </td>
            </tr>
        }
    </tbody>
</table>